{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "xmake build -v --group=debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "xmake build -v --group=release",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}